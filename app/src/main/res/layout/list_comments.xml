<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:id="@+id/notify_layout_grid"
    android:elevation="10dp"
    android:layout_height="wrap_content"
    >


    <GridLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/notification_person_image"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:padding="5dp"
            android:src="@drawable/image"
            android:layout_row="0"
            android:layout_column="0"
            />

        <TextView
            android:id="@+id/thread_comment"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:maxLines = "2"
            android:text="Field 3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollbars = "vertical"
            android:layout_row="2"
            android:layout_column="0"
            />

        <TextView
            android:id="@+id/notification_person_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:text="Field 1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="0"
            android:layout_column="1"
            />

        <TextView
            android:id="@+id/notification_person_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:text="Field 2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_row="0"
            android:layout_column="15"
            />


    </GridLayout>
</LinearLayout>
